<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container main-content">
    <% if (currentPage === 'home') { %>
        <div class="hero">
            <h1 class="fade-in-up">
                <i class="fas fa-code"></i> CodeBlog
            </h1>
            <p class="fade-in-up">Where developers share their knowledge and experiences</p>
            <% if (!user) { %>
                <div class="fade-in-up">
                    <a href="/auth/register" class="btn btn-primary me-3">
                        <i class="fas fa-user-plus"></i> Join Community
                    </a>
                    <a href="/auth/login" class="btn btn-secondary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                </div>
            <% } %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-8">
            <h2 class="mb-4">
                <i class="fas fa-blog"></i> Latest Blog Posts
                <span class="badge bg-secondary ms-2"><%= blogs.length %></span>
            </h2>

            <% if (blogs.length === 0) { %>
                <div class="card text-center">
                    <div class="card-body py-5">
                        <i class="fas fa-blog fa-4x text-muted mb-3"></i>
                        <h4>No blogs found</h4>
                        <p class="text-muted">Be the first to share your knowledge!</p>
                        <% if (user) { %>
                            <a href="/blogs/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Blog
                            </a>
                        <% } else { %>
                            <a href="/auth/register" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Join to Create Blog
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <% blogs.forEach(function(blog) { %>
                    <div class="card blog-card fade-in-up">
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/blogs/blog/<%= blog._id %>" class="text-decoration-none">
                                    <%= blog.title %>
                                </a>
                            </h4>
                            
                            <div class="blog-meta">
                                <span>
                                    <i class="fas fa-user"></i> 
                                    <%= blog.author.name %>
                                </span>
                                <span>
                                    <i class="fas fa-calendar"></i> 
                                    <%= blog.createdAt.toLocaleDateString() %>
                                </span>
                                <span>
                                    <i class="fas fa-clock"></i> 
                                    <%= blog.readTime %> min read
                                </span>
                            </div>

                            <p class="card-text">
                                <%= blog.content.substring(0, 200) %>...
                            </p>

                            <% if (blog.tags && blog.tags.length > 0) { %>
                                <div class="blog-tags">
                                    <% blog.tags.forEach(function(tag) { %>
                                        <span class="badge"><%= tag %></span>
                                    <% }); %>
                                </div>
                            <% } %>

                            <div class="mt-3">
                                <a href="/blogs/blog/<%= blog._id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> Read More
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> About CodeBlog</h5>
                </div>
                <div class="card-body">
                    <p>A modern blogging platform designed for developers to share knowledge, experiences, and insights.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Multi-user support</li>
                        <li><i class="fas fa-check text-success"></i> Secure authentication</li>
                        <li><i class="fas fa-check text-success"></i> Modern coder theme</li>
                        <li><i class="fas fa-check text-success"></i> Responsive design</li>
                    </ul>
                </div>
            </div>

            <% if (user) { %>
                <div class="card mt-4">
                    <div class="card-header">
                        <h5><i class="fas fa-plus-circle"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <a href="/blogs/create" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-plus"></i> Create New Blog
                        </a>
                        <a href="/blogs/dashboard" class="btn btn-info w-100">
                            <i class="fas fa-tachometer-alt"></i> My Dashboard
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
