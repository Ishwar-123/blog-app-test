<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container main-content">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card fade-in-up">
                <div class="card-header">
                    <h3>
                        <i class="fas <%= action === 'create' ? 'fa-plus' : 'fa-edit' %> text-gradient"></i>
                        <%= action === 'create' ? 'Create New Blog' : 'Edit Blog' %>
                    </h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="<%= action === 'create' ? '/blogs/create' : '/blogs/edit/' + blog._id + '?_method=PUT' %>">
                        <div class="mb-3">
                            <label for="title" class="form-label">
                                <i class="fas fa-heading"></i> Blog Title *
                            </label>
                            <input 
                                type="text" 
                                id="title" 
                                name="title" 
                                class="form-control" 
                                value="<%= blog ? blog.title : '' %>"
                                required
                                placeholder="Enter an engaging title for your blog"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">
                                <i class="fas fa-file-alt"></i> Blog Content *
                            </label>
                            <textarea 
                                id="content" 
                                name="content" 
                                class="form-control" 
                                rows="15"
                                required
                                placeholder="Share your knowledge, experiences, and insights here..."
                            ><%= blog ? blog.content : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="tags" class="form-label">
                                <i class="fas fa-tags"></i> Tags (comma-separated)
                            </label>
                            <input 
                                type="text" 
                                id="tags" 
                                name="tags" 
                                class="form-control" 
                                value="<%= blog && blog.tags ? blog.tags.join(', ') : '' %>"
                                placeholder="javascript, nodejs, react, programming"
                            >
                            <div class="form-text">
                                Add relevant tags to help others discover your blog
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input 
                                    class="form-check-input" 
                                    type="checkbox" 
                                    id="isPublished" 
                                    name="isPublished"
                                    <%= blog && blog.isPublished ? 'checked' : (action === 'create' ? 'checked' : '') %>
                                >
                                <label class="form-check-label" for="isPublished">
                                    <i class="fas fa-globe"></i> Publish blog (make it visible to everyone)
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas <%= action === 'create' ? 'fa-plus' : 'fa-save' %>"></i>
                                <%= action === 'create' ? 'Create Blog' : 'Update Blog' %>
                            </button>
                            <a href="/blogs/dashboard" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Writing Tips -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-lightbulb"></i> Writing Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Start with an engaging introduction</li>
                        <li><i class="fas fa-check text-success"></i> Use code examples when relevant</li>
                        <li><i class="fas fa-check text-success"></i> Break content into readable sections</li>
                        <li><i class="fas fa-check text-success"></i> Add relevant tags for discoverability</li>
                        <li><i class="fas fa-check text-success"></i> End with key takeaways</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
