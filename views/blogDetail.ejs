<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container main-content">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <article class="card fade-in-up">
                <div class="card-header">
                    <h1 class="card-title mb-3"><%= blog.title %></h1>
                    <div class="blog-meta">
                        <span>
                            <i class="fas fa-user"></i> 
                            <%= blog.author.name %>
                        </span>
                        <span>
                            <i class="fas fa-calendar"></i> 
                            <%= blog.createdAt.toLocaleDateString() %>
                        </span>
                        <span>
                            <i class="fas fa-clock"></i> 
                            <%= blog.readTime %> min read
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="blog-content">
                        <%= blog.content.split('\n').map(paragraph => `<p>${paragraph}</p>`).join('') %>
                    </div>

                    <% if (blog.tags && blog.tags.length > 0) { %>
                        <div class="blog-tags mt-4">
                            <h6><i class="fas fa-tags"></i> Tags:</h6>
                            <% blog.tags.forEach(function(tag) { %>
                                <span class="badge"><%= tag %></span>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/blogs" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Blogs
                            </a>
                        </div>
                        <% if (user && user._id.toString() === blog.author._id.toString()) { %>
                            <div>
                                <a href="/blogs/edit/<%= blog._id %>" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="POST" action="/blogs/delete/<%= blog._id %>?_method=DELETE" class="d-inline ms-2">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </article>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user-circle"></i> About Author</h5>
                </div>
                <div class="card-body text-center">
                    <img src="<%= blog.author.avatar %>" alt="<%= blog.author.name %>" class="rounded-circle mb-3" width="80" height="80">
                    <h6><%= blog.author.name %></h6>
                    <p class="text-muted"><%= blog.author.email %></p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-share-alt"></i> Share This Blog</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Found this helpful? Share it with others!</p>
                    <div class="d-grid">
                        <button class="btn btn-primary" onclick="copyToClipboard()">
                            <i class="fas fa-copy"></i> Copy Link
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(function() {
        alert('Link copied to clipboard!');
    });
}
</script>

<%- include('partials/footer') %>
